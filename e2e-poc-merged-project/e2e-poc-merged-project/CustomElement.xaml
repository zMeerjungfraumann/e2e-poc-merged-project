<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="e2e_poc_merged_project.CustomElement"
             AutomationId="custom">
    <VerticalStackLayout>
        <Label Text="Button was not clicked yet" 
               x:Name="customtext"
               HorizontalOptions="Center" 
               VerticalOptions="CenterAndExpand" 
               AutomationId="customLabel"/>
        <Button Text="Click Me!" 
                HorizontalOptions="Center" 
                Clicked="onClick"
                VerticalOptions="CenterAndExpand" 
                AutomationId="customButton"/>
    </VerticalStackLayout>
</ContentView>
